<div class="main-content">
    <div class="container login-form1">
        <form action="/user/editprofile" method="POST">
        <h3 style="text-align: center; color: dodgerblue;">Update Profile</h3>
        <div class="container">
            <% if (success_msg != '') {%>
                <div class="alert alert-success alert-dismissible fade show " role="alert">
                  <%=success_msg%>
                  <button type="button" class="close" data-dismiss="alert" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <% } %>

              <% if (typeof errors != 'undefined') {%>
                <% errors.forEach(function(error) { %>
                  <div class="alert alert-warning alert-dismissible fade show " role="alert">
                    <%=error.msg%>
                    <button type="button" class="close" data-dismiss="alert" aria-label="close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                <% }); %>
                <% } %>
            <label for="username"><b>Name</b></label>
            <input type="text" placeholder="Your Name" name="username"
            value="<%=username%>"
            >
    
            <label for="fathername"><b>Father Name</b></label>
            <input type="text" placeholder="Father Name" name="fathername"
            value="<%=fathername%>"
            >
    
            <label for="city"><b>City</b></label>
            <input type="text" placeholder="City Name" name="city"
            value="<%=city%>"
            >
    
            <label for="state"><b>State</b></label>
            <input type="text" placeholder="State Name" name="state"
            value="<%=state%>"
            >
    
            <label for="pincode"><b>Pincode</b></label>
            <input type="number" placeholder="State Pincode" name="pincode"
            value="<%=pincode%>"
            >
    
            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Your Email" name="email"
            value="<%=email%>"
            >
    
            <label for="bloodtype"><b>BloodType</b></label>
            <input type="text" placeholder="BloodType" name="bloodtype"
            value="<%=bloodtype%>"
            >
            <input type="hidden" name="id" value="<%=id%>">
            <input type="submit" value="Update">
        </div>
        </form>
    </div>
