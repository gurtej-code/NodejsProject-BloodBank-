<div class="container login-form1" style="height: 400px; margin-top: 67px;">
    <form action="/user/donateblood" method="POST">
    <h3 style="text-align: center; color: dodgerblue;">Donate Blood</h3>
    <% if (success_msg != '') {%>
        <div class="alert alert-success alert-dismissible fade show " role="alert">
          <%=success_msg%>
          <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
      
    <% if (typeof errors != 'undefined') {%>
        <% errors.forEach(function(error) { %>
          <div class="alert alert-warning alert-dismissible fade show " role="alert">
            <%=error.msg%>
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% }); %>
        <% } %>
    <div class="container">

        <label for="email"><b>Email</b></label>
        <input type="email" placeholder="Your Email" name="email"
        value="<%= typeof name != 'undefined' ? email : '' %>"
        >

        <label for="date"><b>Date</b></label>
        <input type="date" placeholder="Donation Date" name="date"
        value="<%= typeof name != 'undefined' ? date : '' %>"
        >

        <label for="bloodgroup"><b>Blood Group</b></label>
        <input type="text" placeholder="Your Bloodgroup" name="bloodgroup"
        value="<%= typeof name != 'undefined' ? bloodgroup : '' %>"
        >

        <input type="submit" value="Donate Blood">
    </div>
    </form>
</div>


